---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Adopciones Kalö | Rescate y adopción de perros en Costa Rica',
  description = 'Organización de rescate y adopción de perros en Costa Rica. Conoce perritos en adopción, dona y ayuda a transformar vidas.'
} = Astro.props;

const pathname = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Inicio' },
  { href: '/perros/', label: 'Perros en Adopción' },
  { href: '/nuestra-historia/', label: 'Nuestra Historia' },
  { href: '/como-ayudar/', label: 'Cómo Ayudar / Donar' },
  { href: '/contacto/', label: 'Contacto' }
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/logo-kalo.png" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <header class="sticky top-0 z-40 border-b border-[#eaded6] bg-[#fcfaf7]/95 backdrop-blur">
      <div class="container flex flex-wrap items-center justify-between gap-4 py-3">
        <a href="/" class="flex items-center gap-3">
          <img src="/logo-kalo.png" alt="Logo Adopciones Kalö" class="h-12 w-auto max-w-[180px] rounded-xl border border-[#d9d1ca] bg-white/70 p-1" />
          <div>
            <p class="logo-font text-lg font-bold leading-tight text-[#312c29]">Adopciones Kalö</p>
            <p class="text-xs text-[#7f6f67]">Costa Rica</p>
          </div>
        </a>

        <nav class="flex flex-wrap items-center gap-2 text-sm font-semibold text-[#5d5551]">
          {navItems.map((item) => (
            <a
              href={item.href}
              class={`rounded-full px-4 py-2 transition ${pathname === item.href ? 'bg-[#2f2a28] text-white' : 'hover:bg-[#f2e8e1]'}`}
            >
              {item.label}
            </a>
          ))}
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="mt-20 border-t border-[#eaded6] bg-white/90">
      <div class="container flex flex-wrap items-center justify-between gap-4 py-8 text-sm text-[#6d625e]">
        <p>&copy; {new Date().getFullYear()} Adopciones Kalö. Rescate y adopción responsable.</p>
        <div class="flex flex-wrap items-center gap-4">
          <a class="hover:text-[#dd5f4a]" href="https://www.instagram.com/adopcioneskalo" target="_blank" rel="noreferrer">@adopcioneskalo</a>
          <a class="hover:text-[#dd5f4a]" href="mailto:adopcioneskalo@gmail.com">adopcioneskalo@gmail.com</a>
          <a class="hover:text-[#dd5f4a]" href="https://ig.me/m/adopcioneskalo" target="_blank" rel="noreferrer">DM Instagram</a>
        </div>
      </div>
    </footer>
  </body>
</html>


