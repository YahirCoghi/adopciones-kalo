---
interface Props {
  titulo: string;
  valor: string;
  copyValue: string;
  buttonText: string;
}

const { titulo, valor, copyValue, buttonText } = Astro.props;
---

<article class="surface p-5">
  <p class="text-xs font-bold uppercase tracking-[0.18em] text-[#7cb5a0]">{titulo}</p>
  <p class="mt-3 text-2xl font-extrabold text-[#312c29]">{valor}</p>
  <button class="button button-secondary mt-5 w-full" data-copy={copyValue}>{buttonText}</button>
</article>

